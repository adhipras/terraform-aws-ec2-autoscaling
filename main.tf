#-------------------------------------------------------------------------------
# Cloud Provider
#-------------------------------------------------------------------------------

provider "aws" {
  region = var.region
}

#-------------------------------------------------------------------------------
# Amazon Machine Image (AMI)
#-------------------------------------------------------------------------------

data "aws_ami" "image" {
  owners      = [var.ami_owner]
  most_recent = true

  filter {
    name   = "name"
    values = var.ami_name
  }
}
